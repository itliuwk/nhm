.special {
  position: absolute;
  top: -18rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  color: #fff;
  background: #985054;
  font-size: 28rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background: #FFF;
  display: flex;
  line-height: 1.2;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -4rpx 16rpx 0 rgba(0, 0, 0, 0.1);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 20rpx;
}
.tab-bar-item image {
  width: 44rpx;
  height: 44rpx;
  display: block;
  margin-bottom: 8rpx;
}
.bulge {
  position: relative;
  background-color: #FFF;
}
.bulge .tab-bar-bulge {
  position: absolute;
  z-index: -1;
  top: -34rpx;
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  background-color: #FFF;
  box-shadow: 0 -4rpx 16rpx 0 rgba(0, 0, 0, 0.1);
}
.bulge .icon-image{
  position: absolute;
  width: 45px;
  height: 45px;
  top: -12px;
  padding-top: 10px;
}

